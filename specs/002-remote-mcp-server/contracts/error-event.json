{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Remote MCP Error Event",
  "description": "Payload for SSE error events and HTTP error responses",
  "type": "object",
  "properties": {
    "connectionId": {
      "type": "string",
      "description": "Client session identifier"
    },
    "requestId": {
      "type": ["string", "number", "null"],
      "description": "JSON-RPC id that triggered the error, if available"
    },
    "code": {
      "type": "string",
      "enum": [
        "invalid_request",
        "unauthorised",
        "unauthorized",
        "not_found",
        "timeout",
        "tool_error",
        "server_error",
        "server_busy"
      ]
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "details": {
      "type": ["object", "null"],
      "description": "Additional diagnostic information"
    }
  },
  "required": ["code", "message"],
  "additionalProperties": false
}
