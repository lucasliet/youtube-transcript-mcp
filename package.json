{
  "name": "youtube-transcript-mcp",
  "version": "2.0.2",
  "description": "MCP tool to fetch YouTube transcripts for LLMs",
  "license": "MIT",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "youtube-transcript-mcp": "src/cli.js"
  },
  "scripts": {
    "test": "node --test tests/**/*.test.js",
    "lint": "eslint . --max-warnings=0",
    "coverage": "c8 --reporter=lcov --reporter=text npm test",
    "start:stdio": "node src/cli.js",
    "start:remote": "node src/cli.js --mode remote --port 3333 --cors *",
    "dev:stdio": "node --watch src/cli.js",
    "dev:remote": "node --watch src/cli.js --mode remote --port 3333 --cors *",
    "duplicate-check": "jscpd src",
    "unused-deps": "depcheck"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "c8": "^10.1.3",
    "c8": "^9.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "globals": "^16.4.0",
    "jscpd": "^4.0.5"
  }
}
